<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Edit Sight!</h1>
        <div style="width:30%; margin:25px auto;">
            <form action="/sights/<%=data.id%>?_method=PUT" method="POST">
                <div class="form-group">
                <!--The common error that we face during updation is we write sights["name"] instead of "sights[name]" -->
                    <input class="form-control" type="text" name="sights[name]"  value="<%=data.author%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="sights[image]" value="<%=data.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="sights[description]" value="<%=data.description%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="sights[location]" value="<%=data.location%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="sights[city]" value="<%=data.city%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="sights[price]" value="<%=data.price%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/sights">Go Back!</a>
        </div>
            
    </div>
   
</div>

<% include ../partials/footer %>
